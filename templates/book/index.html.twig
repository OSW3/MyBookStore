{% extends 'base.html.twig' %}
{% set domain = 'book' %}
{% set title = "index.title" | trans({}, domain) %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <h1>{{ title }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Category</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.title }}</td>
                <td>{{ book.description }}</td>
                <td>{{ book.price }}</td>
                <td>{{ book.category.name }}</td>
                <td>
                    <a href="{{ path('app_book_show', {'id': book.id}) }}">{{ "index.btn.show" | trans({}, domain) }}</a>
                    <a href="{{ path('app_book_edit', {'id': book.id}) }}">{{ "index.btn.edit" | trans({}, domain) }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">{{ "index.noRecord" | trans({}, domain) }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_book_new') }}">{{ "index.btn.create" | trans({}, domain) }}</a>
{% endblock %}
